{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "module": "esnext",
    "moduleResolution": "node",
    "target": "ESNext",
    "types": ["node"],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noEmit": false
  },
  "include": [
    "vite.config.ts",
    "plugins/spa-fallback.ts",
    "vite-spa-fallback.ts"
  ],
  "exclude": ["node_modules", "dist", "**/*.test.ts"]
}
